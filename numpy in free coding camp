np.random.normal(size =2)

np.random.rand(2,4)

# Range

np.arange(6)

np.arange(1,9)

np.arange(0, 4, .5)

# reshape

np.arange(10).reshape(2,5)

np.arange(10).reshape(5,2)

# linspace

