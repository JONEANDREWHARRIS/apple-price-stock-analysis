np.linspace(0, 10,10,False)

# Zeros, Ones, Empty

np.zeros(5)

np.zeros((2,5))

np.zeros((3,3), dtype=np.int)

np.ones(1)

np.ones((1,9))

np.empty(2)

np.empty((5,5), dtype=int)

# identity and eye

np.identity(6)

np.eye(5)

np.eye(2,5)

np.eye(5,5, k=1)

